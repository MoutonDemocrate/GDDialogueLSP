{
  "name": "gddialoguemanager-lsp",
  "displayName": "Godot Dialogue Manager",
  "description": "A lightweight LSP extension for nathanhoad's dialogue manager addon for Godot 4+",
  "version": "0.0.4",
  "publisher": "moutondemocrate",
  "author": "MoutonDemocrate",
  "repository": {
		"type": "git",
		"url": "https://github.com/MoutonDemocrate/GDDialogueLSP.git"
	},
  "icon": "assets/icon.png",
  "license": "GPL-3.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:gd-dialogue"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "gdDialogue.invalidTag",
        "description": "Color for invalid BBCode tags",
        "defaults": {
          "dark": "#ff0000",
          "light": "#ff0000",
          "highContrast": "#ff0000"
        }
      }
    ],
    "languages": [{
      "id": "gd-dialogue",
      "aliases": ["GDDialogue", "gd-dialogue"],
      "extensions": [".dialogue"],
      "configuration": "./language-configuration.json",
      "icon": {
        "light": "./media/icon-light.svg",
        "dark": "./media/icon-dark.svg"
      }
    }],
    "grammars": [{
      "language": "gd-dialogue",
      "scopeName": "source.gd-dialogue",
      "path": "./syntaxes/gd-dialogue.tmLanguage.json"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^16.18.34",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
